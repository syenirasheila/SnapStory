<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SnapStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender_blue</item>
        <item name="colorSecondaryVariant">@color/lavender_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splashscreen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lavender</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_animated</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SnapStory</item>
    </style>

    <style name="TextStyle"/>

    <style name="TextStyle.TITLE">
        <item name="fontFamily">@font/generalsans_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.LOGO">
        <item name="fontFamily">@font/generalsans_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.SUBTITLE">
        <item name="fontFamily">@font/generalsans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextStyle.LABEL">
        <item name="fontFamily">@font/generalsans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextStyle.LABEL_SEMIBOLD">
        <item name="fontFamily">@font/generalsans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="TextStyle.VALUE">
        <item name="fontFamily">@font/generalsans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextStyle.VALUE_DATE">
        <item name="fontFamily">@font/generalsans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle.VALUE_STORY">
        <item name="fontFamily">@font/generalsans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.VALUE_STORY_DATE">
        <item name="fontFamily">@font/generalsans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="TextStyle.VALUE_STORY_NAME">
        <item name="fontFamily">@font/generalsans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="TextStyle.INPUT">
        <item name="fontFamily">@font/generalsans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="TextStyle.BUTTON">
        <item name="fontFamily">@font/generalsans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.Fab.Custom" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/lavender</item>
    </style>
</resources>